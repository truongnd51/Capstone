<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient nền với màu trắng kéo dài -->
    <gradient
        android:angle="45"
        android:endColor="#87cefa"
        android:startColor="#ffffff"
        android:type="linear">
    </gradient>

    <!-- Bo tròn góc -->
    <corners android:radius="16dp" />

    <!-- Viền nhẹ cho card -->
    <stroke
        android:width="1dp"
        android:color="#a0a0a0" />
</shape>
