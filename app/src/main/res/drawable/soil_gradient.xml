<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient nền với các sắc thái của màu trắng -->
    <gradient
        android:angle="45"
        android:endColor="#e0ffff"
        android:startColor="#ffffff"
        android:type="linear">
    </gradient>

    <!-- Bo tròn góc -->
    <corners android:radius="12dp" />

    <!-- Viền nhẹ cho card -->
    <stroke
        android:width="1dp"
        android:color="#dcdcdc" />
</shape>
